<div data-description="currentday">
  <%= form_for [tracker, day] do |f| %>
    <%= render 'common/error_explanation', object: f.object %>
    <div class="field">
      <%= f.label :hours_of_sleep, "Hours of sleep (previous night)" %>
      <%= f.number_field :hours_of_sleep %>
    </div>

    <div class="field">
      <%= f.label :hours_of_work, "Hours spent working" %>
      <%= f.number_field :hours_of_work %>
    </div>

    <div class="field">
      <%= f.label :hours_of_leisure, "Hours of leisure time" %>
      <%= f.number_field :hours_of_leisure %>
    </div>

    <div class="field">
      <%= f.label :minutes_spent_exercising, "Minutes spent exercising" %>
      <%= f.number_field :minutes_spent_exercising %>
    </div>

    <div class="field">
      <%= f.label :calories_consumed, "Calories consumed" %>
      <%= f.number_field :calories_consumed %>
    </div>

    <div class="field">
      <%= f.label :alcoholic_drinks, "Number of alcoholic drinks" %>
      <%= f.number_field :alcoholic_drinks %>
    </div>

    <div class="field">
      <%= f.label :happiness_index, "Happiness" %>
      <%= f.number_field :happiness_index %>
    </div>

    <div class="field">
      <%= f.label :extra_detals, "Any Special Events?" %>
      <%= f.text_area :extra_details %>
    </div>

    <div class="submit">
      <%= f.submit "Create Day" %>
    </div>

  <% end %>
</div>